<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
</head>

<body>
<div class="w3-container w3-center w3-animate-zoom">
  <img src="imgs/logo.png" alt="Logo" style="width:10%">
<% if (!user) { %>
	<p>Hi, we don't know who you are!<br/> Please <a href="/login">log in</a>.</p>
<% } else { %>
	<p>Hello, <%= user.displayName %>.
	<% if (myObj[0].username == undefined)
	{%>
		<form method="post" action="/addUser">
  			Create a username:<br>
  			<input type="text" name="username"><br>
		</form>
	<% }else{ %> 
	<br>
		Username: <%= myObj[0].username %>
	<% } %>
	
	<br><a href="/logout/facebook">Log out</a></p>
<% } %>

</div>
</body>

